{
    "name": "@flowscripter/ts-example-host-app",
    "version": "0.0.0",
    "description": "Example TypeScript host application for the esm-dynamic-plugins framework.",
    "repository": {
        "type": "git",
        "url": "https://github.com/flowscripter/ts-example-host-app"
    },
    "homepage": "https://github.com/flowscripter/ts-example-host-app",
    "bugs": {
        "url": "https://github.com/flowscripter/ts-example-host-app/issues"
    },
    "keywords": [
        "typescript"
    ],
    "contributors": [
        {
            "name": "Vectronic",
            "email": "hello.vectronic@gmail.com",
            "url": "https://vectronic.io"
        }
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "files": [
        "dist/**/*"
    ],
    "types": "dist/types/index.d.ts",
    "engines": {
        "node": ">=12.6.0"
    },
    "scripts": {
        "prebuild": "npx rimraf dist",
        "build": "npx rollup -c && cp html/index.html dist/",
        "watch": "npx rollup -c --watch",
        "lint": "npx eslint ./src/**/*.ts",
        "nodeHostApp": "DEBUG=*,-NodeModulesPluginRepository NODE_NO_WARNINGS=1 node --experimental-modules dist/nodeEntryPoint.js",
        "browserHostApp": "npx ws --open --directory dist"
    },
    "devDependencies": {
        "@commitlint/cli": "8.1.0",
        "@commitlint/config-conventional": "8.1.0",
        "@flowscripter/eslint-config": "1.3.1",
        "@flowscripter/renovate-config": "1.0.2",
        "@flowscripter/tsconfig": "1.2.0",
        "@types/debug": "4.1.5",
        "@types/lodash": "4.14.137",
        "@typescript-eslint/eslint-plugin": "1.13.0",
        "@typescript-eslint/parser": "1.13.0",
        "eslint": "6.2.1",
        "eslint-plugin-import": "2.18.2",
        "husky": "3.0.4",
        "local-web-server": "3.0.7",
        "rimraf": "2.7.1",
        "rollup": "1.20.0",
        "rollup-plugin-cleanup": "3.1.1",
        "rollup-plugin-commonjs": "10.0.2",
        "rollup-plugin-eslint": "7.0.0",
        "rollup-plugin-node-builtins": "2.1.2",
        "rollup-plugin-node-resolve": "5.2.0",
        "rollup-plugin-typescript2": "0.22.1",
        "rollup-watch": "4.3.1",
        "semantic-release": "15.13.21",
        "temp-dir": "2.0.0",
        "typescript": "3.5.3"
    },
    "dependencies": {
        "@flowscripter/esm-dynamic-plugins": "1.4.4",
        "debug": "4.1.1",
        "lodash": "4.17.15"
    }
}
